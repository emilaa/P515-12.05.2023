@model List<Car>

@{
    ViewData["Title"] = "Index";
}

<h2>Cars</h2>

<div class="list-group">
    <ul class="list-group">
        @foreach (var car in Model)
        {
            <a asp-controller="Car" asp-action="Detail" asp-route-id="@car.Id" class="list-group-item list-group-item-action">
                @car.Name,
                @car.Price
            </a>
        }
    </ul>
    <a asp-controller="Model" asp-action="Index" asp-route-id="@Model.FirstOrDefault()?.ModelId" class="list-group-item list-group-item-action text-danger">Back</a>
</div>